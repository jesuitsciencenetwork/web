            <li><a href="#" data-toggle="modal" data-target="#modal-sources">
                    <em>view list ({{ filter.sources|length }})</em>
            </a></li>
        {% else %}
            <li><em class="text-muted">Not applicable</em></li>
        {% endif %}
    </ul>
